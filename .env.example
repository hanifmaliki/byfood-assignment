# =============================================================================
# Library Management System - Environment Variables
# =============================================================================
# Copy this file to .env and update the values according to your environment
# cp .env.example .env

# =============================================================================
# Database Configuration
# =============================================================================
# PostgreSQL Database Settings
POSTGRES_PASSWORD=your_secure_password_here
DB_HOST=postgres
DB_PORT=5432
DB_NAME=library_management
DB_USER=postgres
DB_PASSWORD=your_secure_password_here
DB_SSL_MODE=disable

# =============================================================================
# Backend Server Configuration
# =============================================================================
# Server Host and Port (use 0.0.0.0 for Docker, localhost for local development)
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8080
BACKEND_ENVIRONMENT=production

# =============================================================================
# API Configuration
# =============================================================================
API_VERSION=v1
API_PREFIX=/api
API_TIMEOUT=30s

# =============================================================================
# CORS Configuration
# =============================================================================
# Comma-separated list of allowed origins
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
# Comma-separated list of allowed HTTP methods
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
# Comma-separated list of allowed headers
CORS_ALLOWED_HEADERS=Content-Type,Authorization

# =============================================================================
# Swagger Documentation
# =============================================================================
# Enable/disable Swagger documentation
SWAGGER_ENABLED=true
SWAGGER_TITLE=Library Management System API
SWAGGER_DESCRIPTION=A RESTful API for managing books and URL processing
SWAGGER_VERSION=1.0

# =============================================================================
# Logging Configuration
# =============================================================================
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE=./logs/app.log

# =============================================================================
# Security Configuration
# =============================================================================
# JWT Secret Key (change this in production!)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRY=24h

# =============================================================================
# Frontend Configuration
# =============================================================================
# Next.js Environment
NODE_ENV=production
# API URL for frontend to connect to backend
NEXT_PUBLIC_API_URL=http://localhost:8080/api

# =============================================================================
# Docker Build Configuration
# =============================================================================
# Force rebuild of backend (optional, set to timestamp to force rebuild)
REBUILD=

# =============================================================================
# Development Overrides
# =============================================================================
# Uncomment and modify these for development environment
# BACKEND_HOST=localhost
# BACKEND_ENVIRONMENT=development
# SWAGGER_ENABLED=true
# CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://127.0.0.1:3000
# NODE_ENV=development

# =============================================================================
# Production Overrides
# =============================================================================
# Uncomment and modify these for production environment
# BACKEND_HOST=0.0.0.0
# BACKEND_ENVIRONMENT=development
# SWAGGER_ENABLED=false
# CORS_ALLOWED_ORIGINS=https://yourdomain.com
# NODE_ENV=production
# POSTGRES_PASSWORD=very_secure_production_password
# JWT_SECRET=very_secure_production_jwt_secret

# =============================================================================
# Notes
# =============================================================================
# - BACKEND_HOST=0.0.0.0 is required for Docker containers to be accessible from host
# - BACKEND_HOST=localhost is for local development without Docker
# - POSTGRES_PASSWORD should be strong and unique in production
# - JWT_SECRET should be long and random in production
# - CORS_ALLOWED_ORIGINS should be restricted in production
# - SWAGGER_ENABLED should be false in production for security

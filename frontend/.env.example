# Frontend Environment Variables Example
# Copy this file to .env.local and update the values as needed

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:8080
NEXT_PUBLIC_API_VERSION=v1

# Application Configuration
NEXT_PUBLIC_APP_NAME="Library Management System"
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_APP_DESCRIPTION="A full-stack CRUD application for managing books"

# Development Configuration
NODE_ENV=development
NEXT_PUBLIC_DEBUG=true

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_ERROR_REPORTING=false

# External Services (if needed)
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=
NEXT_PUBLIC_SENTRY_DSN=

# Build Configuration
NEXT_PUBLIC_BUILD_TIME=
NEXT_PUBLIC_GIT_COMMIT=

# API Endpoints
NEXT_PUBLIC_BOOKS_API_ENDPOINT=/api/books
NEXT_PUBLIC_URL_PROCESSING_API_ENDPOINT=/api/url/process

# UI Configuration
NEXT_PUBLIC_THEME=light
NEXT_PUBLIC_LANGUAGE=en

# Development Server
NEXT_PUBLIC_DEV_SERVER_PORT=3000 
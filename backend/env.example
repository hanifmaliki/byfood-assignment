# Backend Environment Variables Example
# Copy this file to .env and update the values as needed

# Server Configuration
PORT=8080
HOST=localhost

# Database Configuration
# Choose between "sqlite" or "postgres"
DB_TYPE=postgres

# SQLite Configuration (when DB_TYPE=sqlite)
DB_PATH=library.db

# PostgreSQL Configuration (when DB_TYPE=postgres)
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_NAME=library_db
DB_SSL_MODE=disable

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# API Configuration
API_VERSION=v1
API_PREFIX=/api

# Swagger Configuration
SWAGGER_ENABLED=true
SWAGGER_TITLE="Library Management System API"
SWAGGER_DESCRIPTION="A RESTful API for managing books and URL processing"
SWAGGER_VERSION=1.0

# Security Configuration
JWT_SECRET=your-jwt-secret-key-here
JWT_EXPIRY=24h

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=15m

# Development Configuration
DEBUG=true
ENVIRONMENT=development 
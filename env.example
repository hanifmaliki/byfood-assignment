# Project Environment Variables Example
# Copy this file to .env and update the values as needed

# =============================================================================
# PROJECT CONFIGURATION
# =============================================================================

PROJECT_NAME="Library Management System"
PROJECT_VERSION=1.0.0
PROJECT_DESCRIPTION="A full-stack CRUD application for managing books"

# =============================================================================
# BACKEND CONFIGURATION
# =============================================================================

# Server Configuration
BACKEND_PORT=8080
BACKEND_HOST=localhost
BACKEND_ENVIRONMENT=development

# Database Configuration
# Choose between "sqlite" or "postgres"
DB_TYPE=postgres

# SQLite Configuration (when DB_TYPE=sqlite)
DB_PATH=library.db

# PostgreSQL Configuration (when DB_TYPE=postgres)
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_NAME=library_db
DB_SSL_MODE=disable

# API Configuration
API_VERSION=v1
API_PREFIX=/api
API_TIMEOUT=30s

# Security Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRY=24h
BCRYPT_COST=12

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE=./logs/app.log

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=15m

# Swagger Configuration
SWAGGER_ENABLED=true
SWAGGER_TITLE="Library Management System API"
SWAGGER_DESCRIPTION="A RESTful API for managing books and URL processing"
SWAGGER_VERSION=1.0

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================

# Next.js Configuration
NEXT_PUBLIC_API_URL=http://localhost:8080
NEXT_PUBLIC_API_VERSION=v1
NEXT_PUBLIC_APP_NAME="Library Management System"
NEXT_PUBLIC_APP_VERSION=1.0.0

# Development Configuration
NODE_ENV=development
NEXT_PUBLIC_DEBUG=true
NEXT_PUBLIC_DEV_SERVER_PORT=3000

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_ERROR_REPORTING=false
NEXT_PUBLIC_ENABLE_PWA=false

# UI Configuration
NEXT_PUBLIC_THEME=light
NEXT_PUBLIC_LANGUAGE=en
NEXT_PUBLIC_TIMEZONE=UTC

# API Endpoints
NEXT_PUBLIC_BOOKS_API_ENDPOINT=/api/books
NEXT_PUBLIC_URL_PROCESSING_API_ENDPOINT=/api/url/process

# External Services (Optional)
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=
NEXT_PUBLIC_SENTRY_DSN=
NEXT_PUBLIC_MIXPANEL_TOKEN=

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Development Tools
ENABLE_HOT_RELOAD=true
ENABLE_DEBUG_MODE=true
ENABLE_LOGGING=true

# Testing Configuration
TEST_DATABASE_URL=postgres://postgres:password@localhost:5432/library_test_db
TEST_TIMEOUT=30s
COVERAGE_THRESHOLD=80

# =============================================================================
# PRODUCTION CONFIGURATION
# =============================================================================

# Production overrides (uncomment and modify for production)
# BACKEND_ENVIRONMENT=production
# LOG_LEVEL=warn
# DEBUG=false
# NEXT_PUBLIC_DEBUG=false
# RATE_LIMIT_ENABLED=true
# SWAGGER_ENABLED=false
# DB_SSL_MODE=require

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================

# Docker Configuration
DOCKER_IMAGE_NAME=library-management-system
DOCKER_IMAGE_TAG=latest
DOCKER_PORT=8080

# Build Configuration
BUILD_TIMESTAMP=
GIT_COMMIT_HASH=
GIT_BRANCH=

# =============================================================================
# MONITORING & OBSERVABILITY
# =============================================================================

# Health Check
HEALTH_CHECK_ENDPOINT=/health
HEALTH_CHECK_TIMEOUT=5s

# Metrics
METRICS_ENABLED=false
METRICS_PORT=9090

# Tracing
TRACING_ENABLED=false
TRACING_SERVICE_NAME=library-management-system 